<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_list">


    <ImageView
        android:id="@+id/imageView_book"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="11dp"
        android:text="역사와 비판적 사고"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/book_made"
        app:layout_constraintStart_toEndOf="@+id/imageView_book" />

    <TextView
        android:id="@+id/book_made"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="17dp"
        android:text="한빛 아카데미"
        app:layout_constraintBottom_toTopOf="@+id/book_money"
        app:layout_constraintStart_toEndOf="@+id/imageView_book" />

    <TextView
        android:id="@+id/book_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="11dp"
        android:text="15,000원"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/book_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toEndOf="@+id/imageView_book" />

    <TextView
        android:id="@+id/book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="2020년 5월 17일"
        app:layout_constraintStart_toEndOf="@+id/imageView_book"
        app:layout_constraintTop_toBottomOf="@+id/book_money" />
</androidx.constraintlayout.widget.ConstraintLayout>